{
  "name": "@modern-js/mdx-rs-binding",
  "description": "MDX compilation binding for Modern.js",
  "version": "0.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "napi": {
    "name": "mdx-binding-core",
    "triples": {
      "defaults": false,
      "additional": [
        "aarch64-unknown-linux-musl",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "x86_64-unknown-linux-gnu",
        "armv7-unknown-linux-gnueabihf",
        "x86_64-pc-windows-msvc",
        "aarch64-pc-windows-msvc",
        "aarch64-apple-darwin",
        "x86_64-apple-darwin"
      ]
    }
  },
  "license": "MIT",
  "devDependencies": {
    "@mdx-js/mdx": "^2.3.0",
    "@napi-rs/cli": "^2.14.8",
    "benchmark": "^2.1.4",
    "cli-table": "^0.3.11",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "typescript": "^5.0.2",
    "vitest": "^0.29.7"
  },
  "ava": {
    "timeout": "3m"
  },
  "engines": {
    "node": ">= 10"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --cargo-cwd crates/binding --platform --release",
    "build:debug": "napi build --cargo-cwd crates/binding --platform",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "pnpm build:debug && vitest run",
    "universal": "napi universal",
    "version": "napi version",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "release-commit": "git add -A && git commit -m \"chore(release): publish v$npm_package_version\""
  },
  "dependencies": {
    "release-it": "^15.9.3"
  }
}
